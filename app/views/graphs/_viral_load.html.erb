<polygon
  fill="#020202"
  stroke="none"
  stroke-width="4"
  points="
    <% points.each_with_index do |point, index| %>
      <% current_point = point %>
      <% next_point = points[index + 1] %>
      <% if next_point.present? %>
        <%= "#{current_point.x}, #{current_point.y}, #{next_point.x}, #{next_point.y}" %>
      <% end %>
    <% end %>
  "
/>
